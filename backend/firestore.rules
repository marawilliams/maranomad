rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Users can read and write their own cart
    match /carts/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Users can read their own orders
    match /orders/{orderId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      // Only allow writes for creating new orders (server-side)
      allow create: if request.auth != null;
      // Allow updates only for status changes (admin functionality)
      allow update: if request.auth != null && request.auth.token.admin == true;
    }

    // Products are publicly readable
    match /products/{productId} {
      allow read: if true;
      // Only admins can write products
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // Reviews: users can read all, write their own
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Wishlists: users can manage their own
    match /wishlists/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}